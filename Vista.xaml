<Window x:Class="Michis_Veterinaria.Vista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="Vista" Height="474" Width="815">
    <Window.Background>
        <SolidColorBrush Color="#bda2cd"/>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="*"/>
            <!-- Dashboard -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Panel Administrativo"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#61378d"
                   HorizontalAlignment="Left"
                   Margin="10"/>
        <Button Margin="638,10,0,10" Content="Volver" Foreground="White" Background="#bda2cd" BorderBrush="#bda2cd" FontWeight="Bold" FontSize="20" Click="Button_Click"/>
        <!-- Contenedor de cards -->
        <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Center" >

            <!-- CARD 1: Citas Hoy -->
            <Border Background="#ae4392"
                    CornerRadius="15"
                    Padding="20"
                    Margin="15"
                    BorderBrush="#61378d"
                    BorderThickness="3">
                <StackPanel>
                    <TextBlock Text="Lista Veterinarios" FontSize="18" Foreground="White" FontWeight="Bold"/>
                    <TextBlock x:Name="ListaVete" Text="0" FontSize="42" FontWeight="Bold"
                               Margin="0 10 0 0" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- CARD 2: Próximas 7 Días -->
            <Border Background="#ae4392"
                    CornerRadius="15"
                    Padding="20"
                    Margin="15"
                    BorderBrush="#61378d"
                    BorderThickness="3">
                <StackPanel>
                    <TextBlock Text="Citas Totales" FontSize="18" Foreground="White" FontWeight="Bold"/>
                    <TextBlock x:Name="Citas" Text="0" FontSize="42" FontWeight="Bold"
                               Margin="0 10 0 0" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- CARD 3: Clientes Registrados -->
            <Border Background="#ae4392"
                    CornerRadius="15"
                    Padding="20"
                    Margin="15"
                    BorderBrush="#61378d"
                    BorderThickness="3">
                <StackPanel>
                    <TextBlock Text="👥 Clientes" FontSize="18" Foreground="White" FontWeight="Bold"/>
                    <TextBlock x:Name="Clientes" Text="0" FontSize="42" FontWeight="Bold"
                               Margin="0 10 0 0" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- CARD 4: Mascotas Registradas -->
            <Border Background="#ae4392"
                    CornerRadius="15"
                    Padding="20"
                    Margin="15"
                    BorderBrush="#61378d"
                    BorderThickness="3">
                <StackPanel>
                    <TextBlock Text="🐶 Mascotas" FontSize="18" Foreground="White" FontWeight="Bold"/>
                    <TextBlock x:Name="Mascotas" Text="0" FontSize="42" FontWeight="Bold"
                               Margin="0 10 0 0" Foreground="White"/>
                </StackPanel>
            </Border>

        </UniformGrid>
    </Grid>
</Window>
