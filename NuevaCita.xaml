<Window x:Class="Michis_Veterinaria.NuevaCita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="NuevaCita" Height="480" Width="800">
    <Border Background="White"
            CornerRadius="20"
            Padding="25"
            Margin="20"
            BorderBrush="#8a5acb"
            BorderThickness="3">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===========================
                 TÍTULO
            ============================ -->
            <TextBlock Text="Registrar Cliente y Mascota"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#61378d"
                       HorizontalAlignment="Center"
                       Margin="0 10 0 20"/>

            <!-- ===========================
                 FORMULARIOS
            ============================ -->
            <Grid Margin="0,67,0,0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ===========================
                     FORM CLIENTE
                ============================ -->
                <StackPanel Grid.Column="0">

                    <TextBlock Text="👤 Datos del Cliente"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#61378d"
                               Margin="0 0 0 15"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Nombre:" FontWeight="Bold"/>
                        <TextBox x:Name="txtNombreCliente" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Teléfono:" FontWeight="Bold"/>
                        <TextBox x:Name="txtTelefonoCliente" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Correo:" FontWeight="Bold"/>
                        <TextBox x:Name="txtCorreoCliente" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                </StackPanel>

                <!-- ===========================
                     FORM MASCOTA
                ============================ -->
                <StackPanel Grid.Column="2">

                    <TextBlock Text="🐾 Datos de la Mascota"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#61378d"
                               Margin="0 0 0 15"/>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Nombre:" FontWeight="Bold"/>
                        <TextBox x:Name="txtNombreMascota" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Animal (Perro, Gato...):" FontWeight="Bold"/>
                        <TextBox x:Name="txtTipoMascota" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                    <StackPanel Margin="0 5">
                        <TextBlock Text="Raza:" FontWeight="Bold"/>
                        <TextBox x:Name="txtRazaMascota" Height="32" Background="#f8f1ff"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

            <!-- ===========================
                 BOTONES
            ============================ -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 20 0 0">

                <Button Content="Guardar Registro"
                        Width="160" Height="40"
                        Margin="10"
                        Background="#8a5acb"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0" Click="GuardarRe"/>

                <Button Content="Cancelar"
                        Width="120" Height="40"
                        Margin="10"
                        Background="#d9534f"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0" Click="Cerrar"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>
