<Window x:Class="Michis_Veterinaria.Admin_Panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="Admin_Panel" Height="470" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#e9dff2"/>
    </Window.Background>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- BARRA SUPERIOR -->
        <Border Background="#ae4392" Padding="15" Grid.Row="0">
            <DockPanel>

                <TextBlock Text=" Panel Admin"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold"
                           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Vista General"
                            Click="BtnVista_Click"
                            Background="#6d3aa5"
                            Foreground="White"
                            Padding="12,5"
                            BorderThickness="0"/>

                    <Button Content="Veterinarios"
                            Click="BtnGestion_Click"
                            Background="#6d3aa5"
                            Foreground="White"
                            Padding="12,5"
                            BorderThickness="0"/>

                    <Button Content="Clientes y Mascotas"
                            Click="BtnClientes_Click"
                            Background="#6d3aa5"
                            Foreground="White"
                            Padding="12,5"
                            BorderThickness="0"/>

                    <Button Content="Cerrar Sesión"
                            Click="BtnCerrarSesion_Click"
                            Background="#ff6b6b"
                            Foreground="White"
                            Padding="12,5"
                            BorderThickness="0"/>
                </StackPanel>

            </DockPanel>
        </Border>

        <!-- CUERPO PRINCIPAL -->
        <Grid Grid.Row="1" Margin="20">

            <Border Background="White"
                    CornerRadius="20"
                    Padding="30">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock Text="Bienvenido al Panel de Administrador "
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="#61378d"
                               TextAlignment="Center"
                               Margin="0 0 0 20"/>

                    <TextBlock Text="Selecciona una opcion en la parte superior"
                               FontSize="16"
                               Foreground="#7a5aa8"
                               TextAlignment="Center"/>

                </StackPanel>

            </Border>

        </Grid>

    </Grid>

</Window>
