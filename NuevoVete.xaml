<Window x:Class="Michis_Veterinaria.NuevoVete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="NuevoVete" Height="544" Width="800">
    <!-- FONDO CON GRADIENTE -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#e0c3fc" Offset="0"/>
            <GradientStop Color="#8ec5fc" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <!-- CONTENEDOR PRINCIPAL -->
    <Border Margin="20" 
            CornerRadius="15" 
            Background="White"
            Padding="20"
            BorderBrush="#4b2e83"
            BorderThickness="2">


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- TÍTULO CON ESTILO -->
            <Border Grid.Row="0" 
                    Background="#4b2e83" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="0 0 0 20">
                <TextBlock x:Name="txtTitulo"
                          Text="Nuevo Veterinario"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>

            <!-- FORMULARIO -->
            <StackPanel Grid.Row="1" 
                       Margin="0 0 0 20">

                <!-- NOMBRE -->
                <StackPanel Margin="0 0 0 15">
                    <TextBlock Text="Nombre Completo:" 
                              FontWeight="Bold"
                              Foreground="#4b2e83"
                              Margin="0 0 0 5"/>
                    <TextBox x:Name="txtNombre"
                            Height="35"
                            Padding="10 5"
                            FontSize="14"
                            BorderBrush="#b19cd9"
                            BorderThickness="1.5"
                            VerticalContentAlignment="Center"
                            Background="#f8f9ff">
                    </TextBox>
                </StackPanel>

                <!-- ESPECIALIDAD -->
                <StackPanel Margin="0 0 0 15">
                    <TextBlock Text="Especialidad:" 
                              FontWeight="Bold"
                              Foreground="#4b2e83"
                              Margin="0 0 0 5"/>
                    <TextBox x:Name="txtEspecialidad"
                            Height="35"
                            Padding="10 5"
                            FontSize="14"
                            BorderBrush="#b19cd9"
                            BorderThickness="1.5"
                            VerticalContentAlignment="Center"
                            Background="#f8f9ff">
                    </TextBox>
                </StackPanel>

                <!-- TELÉFONO -->
                <StackPanel Margin="0 0 0 15">
                    <TextBlock Text="Teléfono:" 
                              FontWeight="Bold"
                              Foreground="#4b2e83"
                              Margin="0 0 0 5"/>
                    <TextBox x:Name="txtTelefono"
                            Height="35"
                            Padding="10 5"
                            FontSize="14"
                            BorderBrush="#b19cd9"
                            BorderThickness="1.5"
                            VerticalContentAlignment="Center"
                            Background="#f8f9ff">
                    </TextBox>
                </StackPanel>

                <!-- CORREO -->
                <StackPanel Margin="0 0 0 15">
                    <TextBlock Text="Correo Electrónico:" 
                              FontWeight="Bold"
                              Foreground="#4b2e83"
                              Margin="0 0 0 5"/>
                    <TextBox x:Name="txtCorreo"
                            Height="35"
                            Padding="10 5"
                            FontSize="14"
                            BorderBrush="#b19cd9"
                            BorderThickness="1.5"
                            VerticalContentAlignment="Center"
                            Background="#f8f9ff">
                    </TextBox>
                </StackPanel>

            </StackPanel>

            <!-- BOTONES CON ESTILO -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center">

                <Button x:Name="btnGuardar"
                        Content="GUARDAR"
                        Width="120" 
                        Height="40"
                        Margin="10"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#4b2e83"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnGuardar_Click"
                        Cursor="Hand">
                </Button>

                <Button x:Name="btnCancelar"
                        Content="CANCELAR"
                        Width="120" 
                        Height="40"
                        Margin="10"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#6c757d"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnCancelar_Click"
                        Cursor="Hand">
                </Button>
            </StackPanel>
            
        </Grid>
    </Border>
</Window>
