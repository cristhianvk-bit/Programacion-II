<Window x:Class="Michis_Veterinaria.log_in"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="log_in" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#bda2cd"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="White" CornerRadius="20" Padding="40" Width="350" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#61378d" BorderThickness="2">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Iniciar Sesión" FontSize="26" FontWeight="Bold" Foreground="#61378d" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Usuario" Foreground="#61378d" FontWeight="Bold"/>
                <TextBox x:Name="txtUsuario" Height="35" Margin="0 5 0 15" Background="#f3e8ff" BorderBrush="#ae4392" BorderThickness="2"/>

                <TextBlock Text="Contraseña" Foreground="#61378d" FontWeight="Bold"/>
                <PasswordBox x:Name="txtclave" Height="35" Margin="0 5 0 20" Background="#f3e8ff" BorderBrush="#ae4392" BorderThickness="2"/>

                <Button Content="Entrar" Height="40" Background="#ae4392" Foreground="White" FontWeight="Bold" BorderBrush="#61378d" BorderThickness="2" Click="Btn_IniciarSesion"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
