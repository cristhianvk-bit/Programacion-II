<Window x:Class="Michis_Veterinaria.CitaPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Michis_Veterinaria"
        mc:Ignorable="d"
        Title="CitaPanel" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#bda2cd"/>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TITULO -->
        <TextBlock Text="Gestión de Citas"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#61378d"
                   Margin="0 0 0 20"/>

        <!-- TABLA DE CITAS -->
        <DataGrid Grid.Row="1"
                  x:Name="TablaCitas"
                  AutoGenerateColumns="False"
                  Background="White"
                  BorderBrush="#61378d"
                  BorderThickness="2"
                  RowHeight="40"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#f3e8ff"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="150"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="200"/>
                <DataGridTextColumn Header="Mascota" Binding="{Binding Mascota}" Width="150"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>

                <!-- Acciones -->
                <DataGridTemplateColumn Header="Acciones" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Editar"
                                        Width="60" Margin="5"
                                        Background="#ae4392"
                                        Foreground="White"
                                        BorderBrush="#61378d"
                                        Click="Btn_Editar"/>

                                <Button Content="X"
                                        Width="40" Margin="5"
                                        Background="#d9534f"
                                        Foreground="White"
                                        BorderBrush="#61378d"
                                        Click="Btn_Eliminar"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!-- BOTONES CRUD -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0" Grid.Row="0">

            <Button Content="Guardar"
                    Width="120" Height="35" Margin="10 0"
                    Background="#61378d"
                    Foreground="White"
                    BorderBrush="#ae4392"
                    Click="Btn_Guardar"/>

            <Button Content="Cargar"
                    Width="120" Height="35" Margin="10 0"
                    Background="#61378d"
                    Foreground="White"
                    BorderBrush="#ae4392"
                    Click="Btn_Cargar"/>
            
            <Button Content="Nueva Cita"
                    Width="120" Height="35"
                    Background="#ae4392"
                    Foreground="White"
                    BorderBrush="#61378d"
                    Click="Btn_NuevaCita"/>
        </StackPanel>

    </Grid>
</Window>
